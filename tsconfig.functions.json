{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/functions",
    "rootDir": "functions",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["functions/**/*.ts"]
}

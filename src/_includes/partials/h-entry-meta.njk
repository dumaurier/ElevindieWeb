{% if title %}
  <h2 class="p-name">{{ title }}</h2>
{% endif %}
{% if summary %}
  <p class="p-summary">{{ summary }}</p>
{% endif %}
{% if tags %}
  <ul role="list">
    {% for tag in tags %}
      {% if tag !== 'posts' %}
        <li><a class="p-category" href="/tags/{{ tag | slugify }}/">{{ tag }}</a></li>
      {% endif %}
    {% endfor %}
  </ul>
{% endif %}

---
layout: false
permalink: /notes/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ meta.siteName }} — Notes</title>
  <subtitle>Notes from {{ meta.siteName }}</subtitle>
  <link href="{{ meta.url }}/notes/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ meta.url }}/notes/" rel="alternate" type="text/html"/>
  <updated>{{ collections.allNotes | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ meta.url }}/notes/</id>
  <author>
    <name>{{ meta.author.name }}</name>
    <email>{{ meta.author.email }}</email>
  </author>
  {%- for note in collections.allNotes | head(20) %}
  <entry>
    <title>{{ note.templateContent | striptags | truncate(80, false, '…') }}</title>
    <link href="{{ note.url | absoluteUrl(meta.url) }}" rel="alternate" type="text/html"/>
    <id>{{ note.url | absoluteUrl(meta.url) }}</id>
    <updated>{{ note.date | dateToRfc3339 }}</updated>
    <content type="html">{{ note.templateContent | htmlToAbsoluteUrls(note.url | absoluteUrl(meta.url)) }}</content>
  </entry>
  {%- endfor %}
</feed>

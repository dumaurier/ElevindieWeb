---
permalink: /rss.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ meta.siteName }}</title>
    <description>{{ meta.siteDescription }}</description>
    <link>{{ meta.url }}/</link>
    <atom:link href="{{ meta.url }}/rss.xml" rel="self" type="application/rss+xml"/>
    <language>{{ meta.lang }}</language>
    <lastBuildDate>{{ collections.allPosts | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    {%- for post in collections.allPosts | head(20) %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ post.url | absoluteUrl(meta.url) }}</link>
      <guid isPermaLink="true">{{ post.url | absoluteUrl(meta.url) }}</guid>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
      {%- if post.data.description %}
      <description>{{ post.data.description }}</description>
      {%- endif %}
      <content:encoded>{{ post.templateContent | htmlToAbsoluteUrls(post.url | absoluteUrl(meta.url)) }}</content:encoded>
    </item>
    {%- endfor %}
  </channel>
</rss>
